# Токен вашего Telegram бота (получите у @BotFather)
BOT_TOKEN=your_bot_token_here

# ID администратора (узнайте у @userinfobot)
# Можно указать несколько через запятую: 123456789,987654321
ADMIN_ID=your_admin_id_here

# ID группового чата для уведомлений (добавьте бота в группу и узнайте ID)
GROUP_CHAT_ID=your_group_chat_id_here

# ID сотрудников (через запятую)
# Пример: 111111111,222222222,333333333
EMPLOYEE_IDS=employee_id_1,employee_id_2,employee_id_3
